<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.jim.pocketaccounter.intropage.IntroFrame">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:layout_marginTop="@dimen/thirty_dp"
            android:id="@+id/imageView" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textSize="@dimen/twenty_dp"
                android:paddingRight="@dimen/sixteen_dp"
                android:paddingLeft="@dimen/sixteen_dp"
                android:text="@string/let_s_go"
                android:textStyle="bold"
                android:textColor="#414141"
                android:gravity="bottom|center_horizontal"
                android:id="@+id/textView8" />
           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="0dp"
               android:layout_weight="2">

               <com.jim.pocketaccounter.helper.FloatingActionButton
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"

                   android:src="@drawable/check_sign_oq"
                   android:scaleType="centerInside"
                   android:id="@+id/fbDebtBorrowFragment"
                   app:fab_colorNormal="@color/green_light"
                   android:layout_marginTop="@dimen/twentysix_dp"
                   android:layout_alignParentTop="true"
                   android:layout_centerHorizontal="true" />
           </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

</FrameLayout>
